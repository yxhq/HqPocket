<UserControl x:Class="HqPocket.Extensions.Dialoging.Views.MessageDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="300" MaxWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image MaxWidth="64" MaxHeight="64" Margin="20,10,10,10"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Source="{Binding Icon}" />
        <TextBlock Text="{Binding Message}"
                   Grid.Column="1" Margin="10,10,20,10"
                   VerticalAlignment="Center" TextWrapping="WrapWithOverflow" />
    </Grid>
</UserControl>
